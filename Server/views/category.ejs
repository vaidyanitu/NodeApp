<!doctype html>
        <%-include('partials/head') %>    
    
<body>

    <div class="disp subheading">
        <h1><span class="fa fa-anchor"></span>Category</h1>        
    </div>
  
    <div>
     <div class="row"></div>
        <div class="col-sm-6">
            <div class="cbox">
                <h3 class="text-danger"><span class="	fa fa-edit"></span> Categories <i class="fa fa-plus" id="myBtn" style="float: right; margin-right: 100px"></i></span></h3>
                    <!-- The Modal -->
                    <div id="myModal" class="modal">
                        <!-- Modal content -->
                        <div class="modal-content">
                                <span class="closed">&times;</span>
                                <form method="post" action="/category">
                                    <label for="name">Category Name</label>
                                    <input type="text" name="name"/>
                                    <button type="submit">Add</button>
                                </form>
                            </div>
                            
                    </div>
        
                <table cellspacing="20" cellpadding="10">
                <% if (category) { %>
                    <% category.forEach(function(cat){%>                                
                        <tr>
                        <td> <%= cat.name %></td>                                    
                        <td><span class="fa fa-minus-square" id=<%=cat._id%> onclick="deletedisp(this.id)"></span></td>  
                        </tr>                                
                    <% }) %>        
                <% } %>  
            </table>          
            </div>
        </div>
    </div>
</div>

<script>
function deletedisp(id){
    console.log("the category id is "+id);
    var result=confirm("Are you sure you want to delete this?");
    if(result){
        location.href='category/delete/'+id;    }
    }

// Get the modal
var modal = document.getElementById('myModal');
// Get the button that opens the modal
var btn = document.getElementById("myBtn");
// Get the <span> element that closes the modal
var span = document.getElementsByClassName("closed")[0];
//When user clicks on the button, open the modal
btn.onclick=function(){
    modal.style.display="block";
}
// When the user clicks on <span> (x), close the modal
        span.onclick = function() {
    modal.style.display = "none";
}
// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>

<%-include('partials/modalsCss') %>   

</body>
</html>
